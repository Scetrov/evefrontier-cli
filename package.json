{
  "name": "evefrontier-pathfinder",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "markdownlint-cli": "^0.45.0",
    "nx": "22.0.2",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{md,rs,json,toml,mdx}\"",
    "lint:md": "markdownlint --config .markdownlint.json --fix \"instructions/**/*.md\"",
    "precommit:nx": "node scripts/run-precommit-nx.js",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "**/*.{md,rs,json,toml}": [
      "prettier --write"
    ]
  }
}
